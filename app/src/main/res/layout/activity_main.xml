<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="blasko.daniel.projetisn.MainActivity">


    <ImageView
        android:id="@+id/imageViewMeteo"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="45dp"
        tools:src="@drawable/sun" />

    <TextView
        android:id="@+id/textViewTempMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewTempMin"
        android:layout_below="@+id/textViewTempMin"
        android:layout_marginTop="36dp"
        android:text="Maximal temperature : ?°C"
        android:textColor="#FFFF"
        android:textSize="13dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textViewTempMin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_alignTop="@+id/imageViewMeteo"
        android:text="Minimal temperature : ?°C"
        android:textColor="#FFFF"
        android:textSize="13dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textViewTempAct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageViewMeteo"
        android:layout_alignStart="@+id/textViewTempMax"
        android:textColor="#FFFF"
        android:textSize="13sp"
        android:textStyle="bold|italic"
        tools:text="Actual temperature = ?" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="According to the forecast, you should wear..."
        android:textColor="#FFFF"
        android:textSize="17dp"
        android:textAlignment="center"
        android:id="@+id/textViewNull" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textViewNull"
        android:layout_marginStart="15dp"
        android:layout_marginTop="86dp"
        android:src="@drawable/slip" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView"
        android:layout_alignStart="@+id/imageViewMeteo"
        android:layout_marginStart="29dp"
        android:src="@drawable/bikini" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:text="OR"
        android:textColor="#FFFF"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_toStartOf="@+id/textView2"
        android:text="Sexy swimming trunks"
        android:textColor="#FFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView3"
        android:layout_below="@+id/imageView3"
        android:text="A cool bikini"
        android:textColor="#FFFF" />

</RelativeLayout>
